<body>
  <%= form_with(model: flaterate) do |form| %>
    <% if flaterate.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(flaterate.errors.count, "error") %> prohibited this flaterate from being saved:</h2>

       <ul>
          <% flaterate.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <br>

    <div class="field form-group ">
      <%= form.label :date %>
      <%= form.date_select :date, class:"form-control datepicker"%>
    
    </div>

    <br>

    <div class="field form-group ">
      <%= form.label "RO #" %>
      <%= form.text_field :ro_num, class:"form-control" %>
    
    </div>

    <div class="field form-group ">
      <%= form.label "year / Make / Model" %>
      <%= form.text_field :year_make_model, class:"form-control"  %>
    </div>

  
    <div class="field form-group">
      <%= form.label "work done" %>
      <%= form.text_field :work, class:"form-control"  %>
    </div>

  
    <div class="field form-group">
      <%= form.label "Hrs" %>
      <%= form.number_field :hrs, step: :any, class:"form-control"%>
    </div>

    <br>

    <div class="actions">
      <%= form.submit "Update" %>
    
    </div>
  <% end %>
</body> 